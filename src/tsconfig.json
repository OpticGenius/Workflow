{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
          "es7",
          "dom"
        ],
        "target": "es6",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*"
            ]
        }
    },
    "include": [
        "*.ts",
    ],
    "exclude": [
      "node_modules",
    ]
}
